<h1>Items</h1>

<table>
    <thead>
      <th>Name</th>
      <th>Price</th>
    </thead>
    <tbody>
      <% items.each do |item| %>
        <tr>
            <td><%= item.name %></td>
            <td><%= item.price %></td>
            <td><a href="/items/<%= item.id %>">Show</a></td>
            <td><a href="/items/<%= item.id %>/edit">Edit</a></td>
            <td><a href="/items/<%= item.id %>/delete"><button type="submit">Delete</button></a></td>
        </tr>
      <% end %>
    </tbody>
</table>

<a href="/items/new">New Item</a>
<a href="/categories">Categories</a>